[Unit]
Description=Gunicorn instance to serve BlumenHorizon application (Athens)
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/var/www/blumenhorizon
Environment="CITY=athens"
ExecStart=/var/www/blumenhorizon/.venv/bin/gunicorn -c gunicorn.conf.py

[Install]
WantedBy=multi-user.target